{
	"name": "Quirkbot",
	"version": "0.0.7",
	"description": "Allows you to program Quirkbots directly from your browser.",
	"default_locale": "en",
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"app": {
		"background": {
			"scripts": [
				"src/Utils.js",
				"src/chrome-arduino.js",
				"src/ChromeExternalAPIServer.js",
				"src/QUIRKBOT_RECOVERY_SKETCH.js",
				"src/serial.js",
				"src/HexUploader.js",
				"src/Quirkbot.js",
				"src/main.js"				
			]
		}
	},
	"externally_connectable": {
		"matches": [
			"*://quirkbot.com/*",
			"*://quirkbot.dev/*",			
			"*://quirkbot.herokuapp.com/*"
		]
	},
	"permissions": [
		"serial",
		"usb"		
	]
}
