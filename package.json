	"description" : "Quirkbot Chrome App",
	"author" : "Paulo Barcelos <paulo@quirkbot.com>",
	"homepage" : "https://github.com/Quirkbot/QuirkbotChromeApp",
	"devDependencies": {
      "gulp": "^3.9.1",
      "gulp-clean": "^0.3.2",
      "gulp-load-plugins": "^1.2.0",
      "gulp-prompt": "^0.1.2",
      "gulp-s3": "^0.3.0",
      "merge-stream": "^1.0.0",
      "run-sequence": "^1.1.5",
      "yargs": "^4.2.0"
    },
    "scripts": {
      "gulp": "node ./node_modules/gulp/bin/gulp.js",
      "gulp:xunit": "npm run gulp -- --reporter xunit",
	  "shrinkwrap": "mv node_modules original_node_modules && npm install --production && npm shrinkwrap && rm -r node_modules && mv original_node_modules node_modules",
	  "deploy:npm": "npm run shrinkwrap && npm run gulp -- build && npm publish"
    }
}
